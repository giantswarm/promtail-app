{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "ciliumNetworkPolicy": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "kyvernoPolicyExceptions": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "namespace": {
                    "type": "string"
                }
            }
        },
        "promtail": {
            "type": "object",
            "properties": {
                "image": {
                    "type": "object",
                    "properties": {
                        "pullPolicy": {
                            "type": "string"
                        },
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        },
                        "tag": {
                            "type": "null"
                        }
                    }
                },
                "networkPolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "k8sApi": {
                            "type": "object",
                            "properties": {
                                "cidrs": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "rbac": {
                    "type": "object",
                    "properties": {
                        "pspEnabled": {
                            "type": "boolean"
                        }
                    }
                },
                "resources": {
                    "type": "object",
                    "properties": {
                        "limits": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        },
                        "requests": {
                            "type": "object",
                            "properties": {
                                "cpu": {
                                    "type": "string"
                                },
                                "memory": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "serviceMonitor": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "interval": {
                            "type": "string"
                        },
                        "scrapeTimeout": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
